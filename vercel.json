{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["sin1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://apecgloabal-website.vercel.app"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "https://apecgloabal-website.vercel.app"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/companies/([^/]+)",
      "dest": "/companies/$1"
    },
    {
      "src": "/news/([^/]+)",
      "dest": "/news/$1"
    },
    {
      "src": "/news/category/([^/]+)",
      "dest": "/news/category/$1"
    },
    {
      "src": "/projects/([^/]+)",
      "dest": "/projects/$1"
    },
    {
      "src": "/services/([^/]+)",
      "dest": "/services/$1"
    },
    {
      "src": "/services/demo/([^/]+)",
      "dest": "/services/demo/$1"
    },
    {
      "src": "/admin/authors/edit/([^/]+)",
      "dest": "/admin/authors/edit/$1"
    },
    {
      "src": "/admin/authors/delete/([^/]+)",
      "dest": "/admin/authors/delete/$1"
    },
    {
      "src": "/admin/news/edit/([^/]+)",
      "dest": "/admin/news/edit/$1"
    },
    {
      "src": "/admin/news/delete/([^/]+)",
      "dest": "/admin/news/delete/$1"
    },
    {
      "src": "/admin(/.*)?",
      "dest": "/admin$1"
    },
    {
      "src": "/api(/.*)?",
      "dest": "/api$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}